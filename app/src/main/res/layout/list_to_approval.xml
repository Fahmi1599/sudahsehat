<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/shapebox3"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:padding="10dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/Healtcheck"
        android:layout_width="175dp"
        android:layout_height="150dp"
        android:src="@drawable/post_placeholder1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:foreground="?android:attr/selectableItemBackground"
        tools:ignore="MissingClass,MissingConstraints" />

    <TextView
        android:id="@+id/viewpdf"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/sudahsehat1"
        android:text="View PDF"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/approve"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Healtcheck"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/Fullnameapp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@color/sudahsehat1"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Healtcheck"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/typevaccine"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/sudahsehat1"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintStart_toEndOf="@+id/Healtcheck"
        app:layout_constraintTop_toBottomOf="@+id/Fullnameapp" />

    <TextView
        android:id="@+id/startDateApp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/sudahsehat1"
        android:layout_marginEnd="8dp"
        app:layout_constraintStart_toEndOf="@+id/Healtcheck"
        app:layout_constraintTop_toBottomOf="@+id/typevaccine" />

    <TextView
        android:id="@+id/endDateApp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/sudahsehat1"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintStart_toEndOf="@+id/Healtcheck"
        app:layout_constraintTop_toBottomOf="@+id/startDateApp" />

    <Button
        android:id="@+id/approve"
        android:layout_width="125dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/shapebox3"
        android:text="approve"
        android:textColor="@color/sudahsehat1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.593"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/endDateApp"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/Reject"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:text="Reject"
        android:textColor="@color/sudahsehat1"
        android:background="@drawable/shapebox3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.709"
        app:layout_constraintStart_toEndOf="@+id/approve"
        app:layout_constraintTop_toBottomOf="@+id/typevaccine"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>